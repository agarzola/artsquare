#signup
  background-color #fff
  padding-bottom 10em !important
  form
    margin 2em 0
  button
    margin 1em auto
    width 100%
  input, button
    box-sizing border-box
    height em(60, 22)
    font-size em(22, 14)
  @media (min-width $lg_breakpoint)
    form
      width em(700)
      padding 0
      margin-left auto
      margin-right auto
    input
      border-radius $radius 0 0 $radius
      width em(400, 22)
      float left
    button
      border-radius 0 $radius $radius 0
      width em(300, 22)
      margin-top 0
      float right
    input, button
      font-size em(22)
    p
      clear both


.supports-placeholder label
  display none

