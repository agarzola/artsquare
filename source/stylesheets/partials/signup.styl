#signup
  background-color #fff
  padding-bottom 10em !important
  form
    margin 2em 0
  button
    margin 1em auto
    width 100%
  @media (min-width (700/16)em + 4)
    form
      max-width em(700, 18)
      padding 0
      margin-left auto
      margin-right auto
    input
      border-radius $radius 0 0 $radius
      width em(400, 20)
      float left
      height 3em
    button
      border-radius 0 $radius $radius 0
      width em(270, 20)
      margin-top 0
      float right
      height 3em
    p
      clear both


.supports-placeholder label
  display none

