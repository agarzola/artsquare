.navigation
  fixed top 5em left 0 right 0
  transition-property top
  z-index 110
  ol
    list-style none
    padding 0
    margin 0
    width 100%
    height 0
    overflow hidden
    transition-property height, font-size, padding-top
    background-color #fff
    background-color rgba(#fff, 0.95)
    position absolute
    top 0
    left 0
    right 0
    z-index 1
    box-sizing border-box
  &:target ol
    height em(300, 14) + 1.4em
  .supports-no-js &, .reduced_header &
    top 3em
    &:target ol
      height em(300, 14) + 1.4em // 50px * 6 menu items + bottom padding
  li
    display block
    height em(50, 14)
    position relative
    border-top em(1) solid #ddd
    &.login
      border-top none
      a
        left em(18, 14)
        right em(18, 14)
        padding-top 0.7em
  a
    color #000
    font-size em(20, 14)
    padding-top 0.8em
    position absolute
    hostile_takeover()
    &:hover, &:focus
      color #fff

.navigation_open
  color transparent
  text-indent -999em
  display block
  width em(28, 14)
  height em(28, 14)
  overflow hidden
  border-radius 0
  float right
  cursor pointer
  box-sizing border-box
  header_element_spacing()
  background-image url('/images/hamburger_menu_icon@1x.png')
  background-position center
  background-size em(27, 14) em(22, 14)
  background-repeat no-repeat
  @media (min-resolution 1.4dppx)
    background-image url('/images/hamburger_menu_icon@2x.png')
  @media (min-resolution 2.4dppx)
    background-image url('/images/hamburger_menu_icon@3x.png')
  .supports-svg &
    background-image url('/images/hamburger_menu_icon.svg')
  &:hover, &:focus
    background-color transparent

#navigation_close
  display none
  fixed top 0 left 0 right 0 bottom 0
  z-index 0
  color transparent
  background-color transparent
  text-indent -999em
  &:hover, &:focus
    color transparent
    background-color transparent
  #navigation:target &
    display block

@media (min-width $lg_breakpoint)
  .navigation_open
    display none
  .navigation
    position relative
    float right
    top 0
    ol
      position relative
      width auto
      background-color transparent
      padding-top 3em
      padding-right 1.5em
      text-align right
      height auto
      z-index 1
    .supports-no-js &, .reduced_header &
      top 0
      ol
        padding-top 1em
        font-size 0.9em
        a
          padding 0.3em 1em
    li
      display inline-block
      border none
    a
      position relative
      font-size em(20)
      padding 0.7em 0.7em

@media (min-width $lg_breakpoint + 4)
  .navigation
    a
      padding 0.7em 1em
