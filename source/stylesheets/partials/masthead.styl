.masthead
  fixed top 0 left 0 right 0
  height 5em
  overflow hidden
  z-index 10
  background-color transparent
  border-bottom em(1) solid transparent
  transition-property background-color, height, border-color
  transition-duration 0.1s
  h1
    font-size 1em
    width 2em
    height 2em
    margin-top 1.5em
    display block
    background $purple
    color transparent
    text-indent -999em
    transition-property margin-top
  .supports-no-js &, &.white_bg
    height 3em
    background-color #fff
    border-bottom-color #eee
    h1
      margin-top 0.5em
  @media (min-width $lg_breakpoint)
    height 7em
    h1
      margin-top 2.5em
    &.white_bg
      height 3em
      h1
        margin-top 0.5em
