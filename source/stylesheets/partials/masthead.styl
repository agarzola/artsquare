.masthead
  fixed top 0 left 0 right 0
  height 5em
  z-index 10
  background-color transparent
  border-bottom em(1) solid transparent
  transition-property background-color, height, border-color
  transition-duration 0.1s
  .supports-no-js &, &.white_bg
    height 3em
    background-color #fff
    background-color rgba(#fff, 0.95)
    border-bottom-color #eee
  @media (min-width $lg_breakpoint)
    height 7em
    &.white_bg
      height 3em

.logo
  font-size 1em
  width 2em
  height 2em
  display block
  background $purple
  color transparent
  text-indent -999em
  float left
  header_element_spacing()
