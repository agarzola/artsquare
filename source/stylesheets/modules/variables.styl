// Colors
$blue = #0AB0EE
$purple = #834CF1
$blue_purple_gradient = linear-gradient(left, 50% $blue, 100% $purple)
$purple_nothing_gradient = linear-gradient(left, 33.33333% $purple, 66.66666% rgba($purple, 0))

// Type
$type-size-reg = 16
$type-size-reg-lead = 24
$type-size-lar = 22
$type-size-lar-lead = 28
$type-size-huge = 42
$type-size-huge-lead = 44
$font-stack-main = 'Varela Round', sans-serif
$font-stack-mono = Courier, mono
$basefont = 18

// Breakpoint device sizes
$phone-l = 480px
$tablet-p = 768px
$tablet-l = 1024px
$laptop = 1280px
$desktop = 1440px
$monster = 1800px

// Animation Speeds
$anim-slow = 0.7s
$anim-snappy = 0.05s

// Stylistic conventions
$radius = 10px
